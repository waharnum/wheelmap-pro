{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "strictNullChecks": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "alwaysStrict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true
  },
  "compileOnSave": true
}
